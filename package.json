{
  "name": "elementa",
  "private": true,
  "author": "Markus Oberlehner",
  "homepage": "https://github.com/elementa-style-guide/elementa",
  "license": "MIT",
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "lint:scripts": "eslint --ext .js,.vue .",
    "lint:scripts-md": "eslint --config .eslintrc-md.json --ext md .",
    "lint:scripts-md-vue": "eslint --config .eslintrc-md-vue.json --ext md .",
    "lint": "npm run lint:scripts && npm run lint:scripts-md && npm run lint:scripts-md-vue",
    "coverage": "jest --coverage --maxWorkers=4",
    "coveralls": "npm run coverage && cat coverage/lcov.info | coveralls",
    "test": "jest"
  },
  "devDependencies": {
    "@avalanche/eslint-config": "^2.0.0",
    "@babel/core": "^7.0.0-beta.46",
    "@babel/plugin-syntax-dynamic-import": "^7.0.0-beta.46",
    "@babel/preset-env": "^7.0.0-beta.46",
    "babel-core": "^7.0.0-bridge.0",
    "babel-eslint": "^8.2.3",
    "babel-jest": "^22.4.3",
    "coveralls": "^3.0.1",
    "eslint": "^4.19.1",
    "eslint-plugin-import": "^2.11.0",
    "eslint-plugin-markdown": "^1.0.0-beta.6",
    "eslint-plugin-script-tags": "^0.5.0",
    "eslint-plugin-vue": "^4.5.0",
    "jest": "^22.4.3",
    "lerna": "^2.11.0",
    "vue-jest": "^2.5.0"
  },
  "engines": {
    "node": ">= 8.9.0",
    "npm": ">= 5.5.1"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/elementa-style-guide/elementa"
  },
  "bugs": {
    "url": "https://github.com/elementa-style-guide/elementa/issues"
  }
}
